modules = ["python-3.11", "nodejs-20", "python3"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SixThinkingHats"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "build-and-run"

[[workflows.workflow]]
name = "SixThinkingHats"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsc && node dist/nodes/SixThinkingHats/SixThinkingHats.node.js"

[[workflows.workflow]]
name = "build-and-run"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsc && node dist/nodes/SixThinkingHats/SixThinkingHats.node.js"

[deployment]
run = ["sh", "-c", "npx tsc && node dist/nodes/SixThinkingHats/SixThinkingHats.node.js"]
