{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./nodes/SixThinkingHats/dist",
    "rootDir": "./nodes/SixThinkingHats",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["nodes/SixThinkingHats/**/*"],
  "exclude": ["node_modules", "dist"]
}